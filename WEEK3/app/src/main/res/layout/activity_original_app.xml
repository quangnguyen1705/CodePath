<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/original_app_background"
    tools:context=".OriginalAppActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/originalAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PetCare Pro"
        android:textSize="28sp"
        android:textColor="@color/original_primary_text"
        android:fontFamily="@font/custom_bold_font"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Service Icon -->
    <ImageView
        android:id="@+id/petCareIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/puppy_profile_with_icon"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/originalAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professional Pet Care"
        android:textSize="22sp"
        android:textColor="@color/original_primary_text"
        android:fontFamily="@font/custom_medium_font"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/petCareIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/serviceDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book veterinary appointments, grooming sessions, and emergency care for your beloved pets."
        android:textSize="16sp"
        android:textColor="@color/original_secondary_text"
        android:fontFamily="@font/custom_regular_font"
        android:textAlignment="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/serviceTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action Buttons -->
    <Button
        android:id="@+id/bookServiceButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="40dp"
        android:text="Book Service"
        android:textColor="@color/original_button_text"
        android:textSize="16sp"
        android:fontFamily="@font/custom_medium_font"
        android:background="@drawable/original_button_shape"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/serviceDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="Emergency Contact"
        android:textColor="@color/emergency_button_text"
        android:textSize="16sp"
        android:fontFamily="@font/custom_medium_font"
        android:background="@drawable/emergency_button_shape"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/bookServiceButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="â† Back to PawPal"
        android:textColor="@color/link_color"
        android:textSize="14sp"
        android:fontFamily="@font/custom_regular_font"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>