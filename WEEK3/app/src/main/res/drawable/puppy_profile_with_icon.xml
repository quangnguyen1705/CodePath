<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFB74D" />
        </shape>
    </item>
    <!-- Icon in center -->
    <item android:gravity="center" android:width="60dp" android:height="60dp">
        <bitmap android:src="@drawable/puppy" />
    </item>
    <!-- Border frame on top -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="@color/secondary_color" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
